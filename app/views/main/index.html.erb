    <pre>
        url: <a href="https://vast-eyrie-23535.herokuapp.com/api/v1/todos">BaseUrl/todos/</a><br/>
        method: 'get',<br>
        data: {<br/>
            user_id: 1,<br/>
            title: "ExampleTitle",<br/>
            created_by: "ExampleNoOne"<br/>
        }<br/>

        header {<br/>
            token: tokenExample,<br/>
        }<br/>

        response: []

    </pre>
    <hr class="bg-white">
    <pre>
        url: <a href="https://vast-eyrie-23535.herokuapp.com/api/v1/registeration">BaseUrl/todos/:todo_id/items</a><br/>
        method: 'get',<br>
        header {<br/>
            token: tokenExample,<br/>
        }<br/>
        response: []

