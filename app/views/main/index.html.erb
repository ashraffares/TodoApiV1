    <pre>
        url: <a href="https://vast-eyrie-23535.herokuapp.com/api/v1/registeration">BaseUrl/login</a><br/>
        method: 'post',<br>
        data: {<br/>
            email: "example@gmail.com",<br/>
            passowrd: "Example0011$$&&"<br/>
        }<br/>

        response {<br/>
            token: tokenExample,<br/>
        }<br/>
    </pre>
    </div>



